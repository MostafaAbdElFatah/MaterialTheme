<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Color of Action Bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Color of Status Bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Text Color of Action Bar Bar -->
        <item name="textColorPrimary">@color/textColorPrimary</item>
        <!-- Text Color of Activity Background -->
        <item name="windowBackground">@color/colorAccent</item>
        <!-- Text Color of navigationBarColor -->
        <item name="navigationBarColor">@color/navigationBarColor</item>
    </style>

</resources>
